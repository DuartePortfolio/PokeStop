    {
      "name": "Pokedex",
      "description": "Pokedex endpoints - fetch Pokemon data from Pok√©API",
      "item": [
        {
          "name": "List Pokemon (Paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/pokedex/pokemon?limit=20&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pokedex", "pokemon"],
